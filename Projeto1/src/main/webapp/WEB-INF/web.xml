<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    
   
    <servlet>
        <servlet-name>checarPermissao</servlet-name>
        <servlet-class>org.hopto.depositodivisa.servlets.checarPermissao</servlet-class>
    </servlet>
        
    <servlet>
        <servlet-name>UsuariosController</servlet-name>
        <servlet-class>org.hopto.depositodivisa.servlets.UsuariosController</servlet-class>
    </servlet>
    
        
    
    <servlet-mapping>
        <servlet-name>checarPermissao</servlet-name>
        <url-pattern>/checarPermissao</url-pattern>
    </servlet-mapping>
    
       
    <servlet-mapping>
        <servlet-name>UsuariosController</servlet-name>
        <url-pattern>/UsuariosController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <exception-type>java.lang.exception</exception-type>
        <location>/erro.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/erro.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/naoencontrada.jsp</location>
    </error-page>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
